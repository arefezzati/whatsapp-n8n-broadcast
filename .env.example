# =====================================================
# WhatsApp Bridge - Environment Variables
# =====================================================
# Bu dosyayı .env olarak kopyalayıp düzenleyin

# =====================================================
# BASIC CONFIGURATION
# =====================================================

# Port (varsayılan: 3001)
PORT=3001

# Base Path (reverse proxy için, örn: /whatsapp-web)
# Render.com'da boş bırakın
BASE_PATH=

# =====================================================
# AUTHENTICATION & SECURITY
# =====================================================

# Access Token (Panel erişimi için ZORUNLU!)
# Güçlü bir token seçin: minimum 20 karakter, karışık karakterler
ACCESS_TOKEN=2e900c6177180b852182928524f66101f08d42f1

# Token kullanımı:
# Link: https://your-domain.com/?token=2e900c6177180b852182928524f66101f08d42f1
# Render.com: Environment Variables'dan ekleyin
# VPS: .env dosyasına ekleyin

# =====================================================
# PERSISTENT DISK CONFIGURATION
# =====================================================

# Node ortamı (production/development)
# production: /var/data kullanır (Render.com)
# development: process.cwd() kullanır (local)
NODE_ENV=production

# Persistent disk kullan (true/false)
# Render.com'da true yapın
USE_DISK=true

# Disk mount path (Render.com disk yolu)
# Render.com'da: /var/data
# VPS'de: /opt/whatsapp-data veya istediğiniz yol
DISK_MOUNT_PATH=/var/data

# =====================================================
# LOGGING
# =====================================================

# File Logging (true/false)
# - Localhost/VPS: true (logs klasörüne yazar)
# - Render.com: false (sadece console, Render loglarını gösterir)
FILE_LOGS=false

# =====================================================
# NGROK TUNNEL (Sadece localhost geliştirme için!)
# =====================================================

# Ngrok kullan (true/false)
# - Localhost: true (dışarıdan erişim için)
# - Render.com/VPS: false (zaten public URL var)
USE_NGROK=false

# Ngrok Token (tunnel için - opsiyonel)
# https://dashboard.ngrok.com/get-started/your-authtoken
NGROK_AUTH_TOKEN=your_ngrok_token_here

